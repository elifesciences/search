#!/bin/bash

echo -n "Waiting for queues to empty..."
for i in $(seq 60); do
  echo -n "."

  sqs_queue=$(bin/console queue:count || true)
  gearman_queue=$(gearadmin --show-jobs | cut -f 4 | paste -sd+ | bc || true)
  if [ "$sqs_queue" -eq "0" ] && [ "$gearman_queue" -eq "0" ]; then
    echo "OK"
    break
  fi

  if [ "$i" -eq "60" ]; then
    echo "FAILED"
    exit 1
  fi

  sleep 1
done
