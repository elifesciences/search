#!/bin/bash
set -ex

port=9201

while true;
do
    nodes=$(curl --no-progress-meter "localhost:$port/_nodes/_local" | jq ".nodes | length")
    if [ "$nodes" -eq 1 ]; then
        echo "OpenSearch is ready, seeing $nodes node through _nodes API"
    else
        echo "OpenSearch API not responding yet"
        sleep 1
        continue
    fi

    color=$(curl --no-progress-meter "localhost:$port/_cluster/health" | jq -r ".status")
    if [ "$color" == "yellow" ]; then
        echo "OpenSearch is ready, seeing color $color"
    else
        echo "OpenSearch is not ready yet, seeing color $color"
        sleep 1
        continue
    fi

    exit 0
done
