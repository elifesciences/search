# propagate SIGINT to waiting processes

# lsh@2022-01: superceded
# trap 'kill -INT -$waitingPid' INT

interrupt_fn() {
    echo "interrupt caught, exiting."
    kill -n INT "$waitingPid" || echo "'waitingPid' not set"
    kill -n INT "$workerPid" || echo "'workerPid' not set"
    kill -n INT "$queueWatchPid" || echo "'queueWatchPid' not set"
}

trap interrupt_fn EXIT
