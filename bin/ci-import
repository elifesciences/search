#!/usr/bin/env bash
environment=$1

if [ -z "$environment" ]; then
    echo "environment needs to be passed as first argument";
    exit 2;
fi;

./bin/console gearman:worker --env=$environment &
./bin/console gearman:import all --env=$environment

gearmanTasks=$(gearadmin --status | cut -f 2 | paste -sd+ | bc);

until [ "$gearmanTasks" -eq "0" ]; do :; done;

kill $!;
